{
  "name": "vue3-truncate-html",
  "version": "1.1.2",
  "description": "A simple Vue 3 component that's truncate your text.",
  "keywords": [
    "vue",
    "vue3",
    "vue.js",
    "typescript",
    "ts",
    "truncate",
    "collapsed",
    "html",
    "sanitizer",
    "sanitize"
  ],
  "homepage": "https://vue3-truncate-html.ikloster.tech",
  "repository": "https://github.com/ikloster03/vue3-truncate-html",
  "license": "MIT",
  "author": "Ivan Monastyrev <ikloster@yandex.ru>",
  "exports": {
    ".": {
      "import": "./dist/vue3-truncate-html.mjs",
      "require": "./dist/vue3-truncate-html.umd.js"
    }
  },
  "main": "./dist/vue3-truncate-html.umd.js",
  "jsdelivr": "./dist/vue3-truncate-html.umd.js",
  "unpkg": "./dist/vue3-truncate-html.umd.js",
  "module": "./dist/vue3-truncate-html.mjs",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "changelog": "changelogithub",
    "changelog:preview": "changelogithub --dry",
    "analyze": "vite build --config analyze.config.js",
    "build": "vitepress build docs",
    "build:library": "vite build",
    "dev": "vitepress dev docs",
    "postinstall": "simple-git-hooks",
    "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore --fix src",
    "publish:library": "pnpm publish",
    "serve": "vitepress serve docs",
    "sort": "npx sort-package-json",
    "test": "jest src",
    "test:watch": "jest src -i --watchAll",
    "test:pack": "pnpm pack && tar -tzf *.tgz",
    "test:install": "bash scripts/test-install.sh",
    "test:project": "bash scripts/create-test-project.sh",
    "test:prepublish": "pnpm build:library && pnpm test && pnpm typecheck && pnpm test:pack",
    "prepack": "pnpm build:library && pnpm test && pnpm typecheck",
    "typecheck": "vue-tsc --noEmit",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags",
    "version:prerelease": "npm version prerelease && git push && git push --tags",
    "version:prepatch": "npm version prepatch && git push && git push --tags",
    "version:preminor": "npm version preminor && git push && git push --tags",
    "version:premajor": "npm version premajor && git push && git push --tags"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint",
    "commit-msg": "npx commitlint --edit $1",
    "pre-push": "pnpm typecheck && pnpm test"
  },
  "dependencies": {
    "html-truncate": "^1.2.2",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/html-truncate": "^1.2.4",
    "@types/jest": "^29.5.0",
    "@types/jest-axe": "^3.5.9",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/compiler-sfc": "^3.5.17",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^29.2.6",
    "babel-jest": "^29.7.0",
    "changelogithub": "^13.16.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^9.33.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "simple-git-hooks": "^2.13.0",
    "ts-jest": "^29.4.0",
    "ts-morph": "^26.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.2",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^1.6.3",
    "vue-tsc": "^3.0.1"
  },
  "peerDependencies": {
    "vue": "^3.2.31"
  }
}
